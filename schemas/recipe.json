{
  "$ref": "#/definitions/Recipe",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Recipe": {
      "additionalProperties": false,
      "properties": {
        "creationDate": {
          "format": "date-time",
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "ratings": {
          "items": {
            "type": "number"
          },
          "type": "array"
        },
        "ratingsCount": {
          "type": "number"
        },
        "title": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "ratings",
        "creationDate",
        "ratingsCount"
      ],
      "type": "object"
    }
  }
}